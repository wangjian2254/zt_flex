<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   xmlns:s="library://ns.adobe.com/flex/spark" 
				   xmlns:mx="library://ns.adobe.com/flex/mx" width="400" height="300" borderVisible="false"  backgroundAlpha="0.5" backgroundColor="#000000">
	<s:layout>
		<s:BasicLayout/>
	</s:layout>
	<fx:Script>
		<![CDATA[
			
			private var _label:String;

			public function get label():String
			{
				return _label;
			}

			public function set label(value:String):void
			{
				_label = value;
				bar.label = value;
			}

			public function setProgress(result:Number,all:Number):void{
				bar.setProgress(result,all);
				
			}
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<mx:ProgressBar id="bar"
					x="{(this.width-569)/2}" y="{(this.height-50)/2}"
					labelPlacement="center"
					chromeColor="#00ff00"
					trackHeight="15"
					minimum="0"
					maximum="100"
					label=" 0%"
					direction="right"
					mode="manual"
					width="569" 
					fontSize="14"
					color="#0000ff" 
					visible="{this.visible}"
					/>
</s:BorderContainer>
